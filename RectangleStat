package su22hw1;
import java.util.Scanner;

//calculates the area and perimeter of a rectangle when given an length and width
public class Su22HW1 {
    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
          int length, width,area,perimeter;
          System.out.println("Please enter a length and width for a rectangle");
          
            length=sc.nextInt();
            width=sc.nextInt();
            area=length * width;
            perimeter= 2*(length * width);
            
            System.out.printf("When one side is %d and the other side is %d, the area is %d and the perimeter is %d\n",length,width,area,perimeter);
       
    }
    
}
